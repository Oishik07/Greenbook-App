<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatback"
    tools:context=".ResetPasswordActivity">

    <include
        android:id="@+id/forget_password_toolbar"
        layout="@layout/app_bar_layout"/>

    <TextView
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="We will mail you a link after you provide your Email and click the send button"
        />

    <EditText
        android:id="@+id/reset_password_EMAIL"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext7n"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="355dp"
        android:paddingLeft="14dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Enter your registered email here"
        android:ems="10"
        android:inputType="textEmailAddress" />
    
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/reset_password_email_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Send Email"
        app:cornerRadius="27dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="120dp"
        />


</RelativeLayout>