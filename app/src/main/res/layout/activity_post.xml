<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".PostActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/update_post_page_toolbar"
        />


    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/select_post_image"
        android:background="@drawable/select_image"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="55dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="440dp"
        android:id="@+id/post_description"
        android:textColorHint="@color/black"
        android:hint="Write something about the image..."
        android:layout_marginLeft="35dp"
        android:paddingLeft="18dp"
        android:textColor="@color/black"
        android:background="@drawable/edittext7nn"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:text="POST"
        android:id="@+id/update_post_button"
        android:layout_marginLeft="155dp"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>